<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/temporaryBackground">

        <shape
            android:shape="rectangle">

            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/dark"
                android:centerColor="@color/dark"
                android:endColor="@color/dark_transparent_high"/>

        </shape>
    </item>

    <item>
        <ripple
            android:color="@color/default_color_game_light_transparent">

            <item
                android:id="@android:id/mask"
                android:height="15dp"
                android:gravity="bottom|center_horizontal">

                <shape android:shape="rectangle">
                    <solid android:color="@color/default_color_game_light_transparent" />
                </shape>

            </item>

        </ripple>
    </item>

    <item
        android:id="@+id/temporaryForeground"
        android:bottom="5dp">

        <shape
            android:shape="rectangle">

            <corners
                android:bottomLeftRadius="9dp"
                android:bottomRightRadius="9dp"/>

            <solid
                android:color="@color/light"/>

        </shape>
    </item>

</layer-list>