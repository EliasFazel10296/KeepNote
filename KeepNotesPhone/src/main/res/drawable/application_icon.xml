<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="center"
        android:height="303dp"
        android:width="303dp">

        <shape
            android:shape="oval">

            <gradient
                android:gradientRadius="43%"
                android:type="radial"
                android:startColor="@color/dark"
                android:centerColor="@color/dark_transparent"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:height="247dp"
        android:width="247dp">

        <shape
            android:shape="oval">

            <solid
                android:color="@color/light"
                android:type="radial" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:height="303dp"
        android:width="303dp"
        android:drawable="@drawable/vector_brand_icon">
    </item>

</layer-list>